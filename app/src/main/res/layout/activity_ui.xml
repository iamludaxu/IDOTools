<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ren.daxu.idotools.ui.UIActivity">

    <ren.daxu.ui.seekbar.BubbleSeekBar
        android:id="@+id/bubbleSeekBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@color/colorPrimary"
        app:barHeight="10dp"
        app:bubbleBackgroud="@drawable/thumb"
        app:indicator="@drawable/thumb"
        app:indicatorHeight="20dp"
        app:indicatorTextSize="12dp"
        app:indicatorWidth="60dp"
        app:max="100.0"
        app:min="50.0"
        app:secondTrack="@drawable/track_s"
        app:track="@drawable/track" />


</LinearLayout>
